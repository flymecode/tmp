<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xupt.tmp.mapper.QuestionMapper">
    <insert id="insert" parameterType="com.xupt.tmp.model.QuestionPaper">
        <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO `question_paper`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            `create_id`,
            `name`,
            `questions`,
            `status`
        </trim>
        VALUES
        <trim prefix=" (" suffix=")" suffixOverrides=",">
            #{create_id, jdbcType=VARCHAR},
            #{name, jdbcType=VARCHAR},
            #{questions, jdbcType=VARCHAR},
            #{questions, jdbcType=INT},
        </trim>
    </insert>
    <select id="getQuestionsByConditions" resultType="com.xupt.tmp.model.Question"
            parameterType="com.xupt.tmp.dto.questionDto.QueryQuestionParam">
        SELECT * FROM question
        <where>
            <if test='type != null'>
                `question_type` = #{type},
            </if>
            <if test='difficulty != null'>
                AND `difficulty` = #{difficulty},
            </if>
            <if test='courseId != null'>
                AND course_id = #{courseId}
            </if>
        </where>
    </select>

    <select id="selectQuestionByIds" resultType="com.xupt.tmp.model.Question">
        SELECT * FROM question
        <where>
            <if test="list != null and list.size > 0">
                id in
                <foreach collection="list" index="index" item="item" open="(" close=")" separator=",">
                    #{item}
                </foreach>
            </if>
        </where>
    </select>

</mapper>
